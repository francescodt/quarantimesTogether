 function hideElement() { 
 let value = $(this).val(); 
 console.log(value);
  {  
   $('section').hide();    
   $(`section.${value}`).slideDown(888); 
   }                                       
}

</script>

  </main>

  <footer id="footer">

    <%- include('../layout/footer') %>

  </footer>
</body>


</html>